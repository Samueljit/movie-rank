{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "newline-before-return": "error",
        "no-var": "error",
        "space-in-parens": [
            "error", 
            "never"
        ],
        "sort-imports": [
            "error",
            { "ignoreCase": true }
        ],
        "array-bracket-newline": [
            "error", 
            { "multiline": true, "minItems": 3 }
        ],
        "no-multiple-empty-lines": [
            "error", 
            { "max": 1, "maxEOF": 0, "maxBOF": 0 }
        ],
        "no-unused-vars": [
            "error", 
            { "ignoreRestSiblings": true, "argsIgnorePattern": "^_"}
        ]
    }
}
